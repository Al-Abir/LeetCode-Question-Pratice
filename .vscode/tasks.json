{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-active-file",
      "type": "shell",
      "command": "g++",
      "args": ["-g", "${file}", "-o", "build/Debug/${fileBasenameNoExtension}"],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
